# Rafiki Academy Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sat-academy
# For MongoDB Atlas (cloud), use format:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sat-academy

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Get your API key from: https://platform.openai.com/api-keys

# JWT Secret for Authentication (generate a random string)
JWT_SECRET=your_jwt_secret_here

# Optional: Additional Configuration
# CORS_ORIGIN=http://localhost:3000
# LOG_LEVEL=info
